@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="album bg-body-tertiary mt-3">
    <div class="container">
        <vc:navigation-to-home />
        <vc:page-title title="@ViewData["Title"]" subtitle="" />
        <div class="d-flex flex-column p-4 shadow-sm bg-light">
            <form class="mb-3" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Email" class="form-label">Имя</label>
                    <input class="form-control rounded-0" asp-for="Input.FirstName" autocomplete="firstname" placeholder="Введите имя..." />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Email" class="form-label">Фамилия</label>
                    <input class="form-control rounded-0" asp-for="Input.LastName" autocomplete="lastname" placeholder="Введите фамилию..." />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Email" class="form-label">Почта</label>
                    <input class="form-control rounded-0" asp-for="Input.Email" autocomplete="username" placeholder="Введите почту..." />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <input class="form-control rounded-0" asp-for="Input.Password" placeholder="Введите пароль..." />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Подтвердите пароль</label>
                    <input class="form-control rounded-0" asp-for="Input.ConfirmPassword" placeholder="Подтвердите пароль..." />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="btn btn-primary rounded-0 bg-dark">Зарегистрироваться</button>
            </form>
            <span>
                Уже есть аккаунт? <a class="text-dark" asp-area="Identity" asp-page="/account/login">Войти</a>
            </span>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
