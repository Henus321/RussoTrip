@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
}

<div class="album bg-body-tertiary mt-3">
    <div class="container">
        <vc:navigation-to-home />
        <vc:page-title title="@ViewData["Title"]" subtitle="" />
        <div class="d-flex flex-column p-4 shadow-sm bg-light">
            <form class="mb-3" id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Email" class="form-label">Почта</label>
                    <input class="form-control rounded-0" asp-for="Input.Email" autocomplete="username" placeholder="Введите почту..." />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Input.Password" class="form-label">Пароль</label>
                    <input class="form-control rounded-0" asp-for="Input.Password" placeholder="Введите пароль..." />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <button id="login-submit" type="submit" class="btn btn-primary rounded-0 bg-dark">Войти</button>
            </form>
            <span>
                Нет аккаунта? <a class="text-dark" asp-area="Identity" asp-page="/account/register">Регистрация</a>
            </span>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
