@using Microsoft.AspNetCore.Identity
@using RussoTrip.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<header class="bg-dark">
    <div class="container p-1">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm text-light">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-page="index"><h2 class="logo">Russo Trip</h2></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item ms-2">
                            <a class="nav-link text-light" asp-page="/excursions/index">Экскурсии</a>
                        </li>
                        <li class="nav-item ms-2">
                            <a class="nav-link text-light" asp-page="/about/index">О нас</a>
                        </li>
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item ms-2">
                                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/account/logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                    <button id="logout" type="submit" class="nav-link btn btn-link text-light border-0">Выйти</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-2">
                                <a class="nav-link text-light" id="login" asp-area="Identity" asp-page="/account/login">Войти</a>
                            </li>
                        }
                    </ul>
                </div>
                <vc:search-input />
            </div>
        </nav>
    </div>
</header>