@using RussoTrip.Helpers
@model Excursion
@{
    string cityName = Helpers.GetLocaleCity(Model.City.Name);
    string localeDate = Helpers.GetLocaleDate(Model.Date.ToString("dd/MM/yyyy"));
}

<div class="col d-flex">
    <div class="card shadow border-0 rounded-0">
        <div class="card-body d-flex flex-column">
            <div class="d-block ratio ratio-16x9 mb-1">
                <img class="img-fluid object-fit-cover" src="@Model.ImageUrl" alt="@Model.Name" />
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <small class="text-body-secondary">@localeDate</small>
                <small class="text-body-secondary">@cityName</small>
            </div>

            <h3 class="card-text fw-bold mb-1">@Model.Name</h3>
            <p class="card-text mb-2">@Model.Description</p>

            <div class="d-flex justify-content-between align-items-center mt-auto">
                <a class="text-dark" asp-page="/excursions/details"
                   asp-route-id="@Model.Id">Подробнее</a>
                <span class="d-flex justify-content-between align-items-center">
                    <i class="bi bi-person-circle me-1"></i>
                    <small class="text-body-secondary">@Model.Author.UserName</small>
                </span>
            </div>
        </div>
    </div>
</div>