@model HomeViewModel 

@{
    ViewData["Title"] = "Главная";
}

<div class="album py-5 bg-body-tertiary">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var item in Model.Excursions)
            {
                <div class="col">
                    <div class="card shadow-sm">
                        <img class="card-img-top" src="@item.ImageUrl" width="100%" height="225" alt="Card image cap" />
                        <div class="card-body">
                            <p class="card-text">@item.Name</p>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <small class="text-body-secondary">@item.City.Name</small>
                                <small class="text-body-secondary">@item.Author</small>
                                <small class="text-body-secondary">@item.Date</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
