@model Excursion

<div class="col d-flex">
    <div class="card shadow border-0 rounded-0">
        <div class="card-body d-flex flex-column">
            <div class="d-block ratio ratio-16x9 mb-1">
                <img class="img-fluid object-fit-cover" src="@Model.ImageUrl" alt="@Model.Name" />
            </div>

            <div class="d-flex justify-content-between align-items-center">
                <small class="text-body-secondary">@Model.Date.ToString("dd/MM/yyyy")</small>
                <small class="text-body-secondary">@Model.City.Name</small>
            </div>

            <h3 class="card-text fw-bold mb-1">@Model.Name</h3>
            <p class="card-text mb-2">@Model.Description</p>

            <div class="d-flex justify-content-between align-items-center mt-auto">
                <a class="text-dark" asp-controller="excursions"
                   asp-action="details"
                   asp-route-id="@Model.Id">Подробнее</a>
                <small class="text-body-secondary">@Model.Author</small>
            </div>
        </div>
    </div>
</div>